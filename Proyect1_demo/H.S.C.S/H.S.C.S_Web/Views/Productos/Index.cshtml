@model List<Shopping_BL.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Codigo
            </th>

            <th>
                Descripción
            </th>
            <th>
                Precio
            </th>
        </tr>
    </thead>


    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.Codigo</td>
            <td>@producto.Descripcion</td>
            <td>@producto.Precio</td>

        </tr>
    }
</table>